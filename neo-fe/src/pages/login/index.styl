.login-container
  width 100%
  min-height 100vh
  display flex
  justify-content center
  align-items center
  .login-form
    display block
    width 520px
    text-align center
    padding 28px 52px
    box-sizing border-box
    box-shadow 0px 0px 50px rgba(0, 0, 0, 0.2)
    border-radius 4px
    h1
      font-weight 100
      letter-spacing 20px
      padding-left 10px
      margin 10px 0
    .login-form-button
      width 100%